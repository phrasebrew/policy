---
export interface Props {
  title: string;
  description?: string;
  lang?: 'ja' | 'en';
}

const { title, description: propsDescription, lang = 'ja' } = Astro.props;
const isJapanese = lang === 'ja';
const currentPath = Astro.url.pathname;

// UI文字列
const ui = {
  ja: {
    terms: '利用規約',
    privacy: 'プライバシーポリシー',
    skipToMain: 'メインコンテンツへスキップ',
    copyright: '© 2025 Silvis, LLC. All rights reserved.',
    lastUpdated: '最終更新日',
    langSwitch: 'English',
    defaultDescription: 'PhraseBrewの法的文書'
  },
  en: {
    terms: 'Terms of Service',
    privacy: 'Privacy Policy',
    skipToMain: 'Skip to main content',
    copyright: '© 2025 Silvis, LLC. All rights reserved.',
    lastUpdated: 'Last updated',
    langSwitch: '日本語',
    defaultDescription: 'PhraseBrew Legal Documents'
  },
};

const t = ui[lang];
const altLang = lang === 'ja' ? 'en' : 'ja';
const lastUpdated = isJapanese ? '2025年8月15日' : 'August 15, 2025';
const description = propsDescription || t.defaultDescription;

// 現在のパスから言語切替後のパスを生成
let altPath = currentPath;
if (currentPath.includes('/ja/')) {
  altPath = currentPath.replace('/ja/', '/en/');
} else if (currentPath.includes('/en/')) {
  altPath = currentPath.replace('/en/', '/ja/');
} else {
  // 旧URLの場合は新しい言語別URLにリダイレクト
  if (currentPath.includes('/terms')) {
    altPath = `/policy/${altLang}/terms`;
  } else if (currentPath.includes('/privacy')) {
    altPath = `/policy/${altLang}/privacy`;
  }
}
---

<!DOCTYPE html>
<html lang={lang}>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} - PhraseBrew</title>
  <meta name="description" content={description}>
  <link rel="icon" type="image/svg+xml" href="/policy/favicon.png">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=BIZ+UDPGothic:wght@400;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/policy/global.css">
</head>
<body>
  <a href="#main" class="skip-link">{t.skipToMain}</a>
  
  <header>
    <nav>
      <span class="brand">PhraseBrew</span>
      <a href={`/policy/${lang}/terms`} class={currentPath.includes('/terms') ? 'active' : ''}>
        {t.terms}
      </a>
      <a href={`/policy/${lang}/privacy`} class={currentPath.includes('/privacy') ? 'active' : ''}>
        {t.privacy}
      </a>
      <a href={altPath} class="lang-switch">
        {t.langSwitch}
      </a>
    </nav>
  </header>
  
  <main id="main">
    <slot />
  </main>
  
  <footer>
    <p>{t.copyright}</p>
    <p>{t.lastUpdated}: {lastUpdated}</p>
  </footer>
</body>
</html>

<style>
  .active {
    font-weight: 700;
    opacity: 1 !important;
  }
  
  .active::after {
    content: '';
    display: block;
    width: 100%;
    height: 2px;
    background: var(--color-primary);
    margin-top: 2px;
  }
  
  .lang-switch {
    margin-left: auto;
    padding: var(--space-xs) var(--space-sm);
    border: 1px solid var(--color-primary);
    border-radius: 4px;
    background: white;
    color: var(--color-primary);
    text-decoration: none;
    transition: all 0.3s ease;
  }
  
  .lang-switch:hover {
    background: var(--color-primary);
    color: white;
  }
</style>
